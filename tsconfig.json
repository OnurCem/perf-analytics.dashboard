{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@environment": ["config/env.local.ts"],
      "img/*": ["../assets/img/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
